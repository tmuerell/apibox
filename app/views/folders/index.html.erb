<h2>Folders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><%= folder.parent_id %></td>
        <td><%= list_actions(folder) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Folders</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= link_to "<span class=\"bi bi-folder\"></span>&nbsp;#{folder.name}".html_safe, folder %></td>
        <td><%= list_actions(folder) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
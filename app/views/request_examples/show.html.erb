

<div class="d-flex">
  <h2 class="flex-fill"><%= @request_example.request.name %> - <%= @request_example.name %></h2>

  <div class="dropdown">
    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      Actions
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <li><%= link_to 'Edit', edit_request_example_path(@request_example), class: 'dropdown-item' %></li>
      <li><%= link_to 'Delete', @request_example, method: :delete, class: 'dropdown-item', data: { confirm: "Really sure?" } %></li>
      <li><%= link_to 'Clone example', new_request_example_path(request_example_id: @request_example.id, clone: 1), class: 'dropdown-item' %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= link_to 'Add param', new_request_param_path(request_example_id: @request_example.id), class: 'dropdown-item' %></li>
      <li><%= link_to 'Add header', new_request_header_path(request_example_id: @request_example.id), class: 'dropdown-item' %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= link_to 'Show log', log_request_path(@request_example.request), class: 'dropdown-item' %></li>
    </ul>
  </div>
</div>

<%= render 'request_examples', request: @request_example.request %>
<%= render 'request_detail', request: @request_example %>

<div class="btn-group my-2">
  <%= link_to 'Send request', run_request_example_path(@request_example), method: :post, remote: true, class: 'btn btn-success' %>
  <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
    <span class="visually-hidden">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu ">
    <li><%= link_to 'Debug request', run_request_example_path(@request_example, debug: 1), method: :post, remote: true, class: 'dropdown-item' %></li>
  </ul>
</div>

<div id="run-result" class="my-5">
</div>

<% content_for(:actions) { '&nbsp;'.html_safe } %>